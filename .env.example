# Environment variables for AI Crypto Bot
# Copy this file to .env and fill in your values

# ===========================================
# EXCHANGE API (REQUIRED)
# ===========================================
# Bybit API Keys - получить на https://testnet.bybit.com или https://www.bybit.com
BYBIT_API_KEY=your_api_key_here
BYBIT_API_SECRET=your_api_secret_here
BYBIT_TESTNET=true  # true = Testnet (виртуальные деньги), false = Mainnet (реальные деньги)

# ===========================================
# TRADING CONFIGURATION
# ===========================================
DEFAULT_SYMBOL=BTC/USDT
DEFAULT_TIMEFRAME=15m
TRADE_MODE=paper  # paper = симуляция, testnet = testnet API, live = реальная торговля

# ===========================================
# RISK MANAGEMENT
# ===========================================
RISK_PER_TRADE=0.01  # 1% risk per trade (рекомендуется 0.5-2%)
MAX_POSITIONS=3      # Максимум одновременных позиций
MAX_DRAWDOWN=0.15    # 15% максимальная просадка

# ===========================================
# MACHINE LEARNING
# ===========================================
ML_MODEL_PATH=models/
ML_CONFIDENCE_THRESHOLD=0.60  # Минимальная уверенность модели для входа (60%)
RETRAIN_INTERVAL_HOURS=24     # Переобучение модели каждые 24 часа

# ===========================================
# SENTIMENT ANALYSIS
# ===========================================
# CryptoPanic API - получить на https://cryptopanic.com/developers/api/
CRYPTOPANIC_API_KEY=your_cryptopanic_key_here

# NewsAPI - получить на https://newsapi.org/ (опционально)
NEWS_API_KEY=your_news_api_key_here

SENTIMENT_THRESHOLD=-0.1  # Минимальный sentiment для входа

# ===========================================
# TELEGRAM BOT (Optional)
# ===========================================
# Telegram Bot Token - создать через @BotFather
TELEGRAM_BOT_TOKEN=

# Telegram Chat ID - получить через @userinfobot
TELEGRAM_CHAT_ID=

# ===========================================
# DATABASE
# ===========================================
DB_PATH=data/trading.db

# ===========================================
# WEB DASHBOARD
# ===========================================
FLASK_SECRET_KEY=change-this-to-random-secret-key-32-chars-min
DASHBOARD_PORT=5000

# ===========================================
# PRODUCTION SETTINGS
# ===========================================
FLASK_ENV=production
LOG_LEVEL=INFO  # DEBUG, INFO, WARNING, ERROR

# ===========================================
# NOTES:
# ===========================================
# 1. ОБЯЗАТЕЛЬНО измените BYBIT_API_KEY и BYBIT_API_SECRET
# 2. ОБЯЗАТЕЛЬНО измените FLASK_SECRET_KEY (для безопасности dashboard)
# 3. Сначала тестируйте на TESTNET (BYBIT_TESTNET=true)
# 4. CRYPTOPANIC_API_KEY - бесплатный план есть (750 запросов/день)
# 5. NEWS_API_KEY - опционально, для дополнительных новостей
# 6. Telegram - опционально, но очень полезно для уведомлений
LOG_FILE=logs/trading.log
